alert ("bem vindo ao jogo do numero secreto. seu ze ruela");
let numerosecreto = parseInt(Math.random() * 1000 + 1)
console.log(numerosecreto);  
let chute;
console.log(chute);
let tentativas = 1;
console.log(tentativas);
let palavratentativa = tentativas > 1 ? 'tentativas' : 'tentativa'

//while enquanto nao acertar o numero secreto continue perguntando
while (chute != numerosecreto) { 
    chute = prompt ('Escolha um numero entre 1 e 1000.');
     if (chute == numerosecreto) {
        alert (`Isso ai! Você descobriu o numero secreto ${numerosecreto} com ${tentativas} ${palavratentativa}.`);}
     else {
     if (chute > numerosecreto) {
        alert (`O numero secreto é menor que  ${chute}.`); }
     else { 
        alert (`O numero secreto é maior que o ${chute}.`);
        }
        tentativas++
    }
}


console.log ("Bem vindo ao nosso programa!")
// Atribuindo o valor do seu nome à variável "nome"
